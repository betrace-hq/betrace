% Title page
\renewcommand{\maketitle}{%
  \begin{titlepage}
    \vspace*{1.5cm}

    % FLUO Logo and tagline
    \begin{center}
    \colorbox{fluoblue}{%
      \begin{minipage}{0.5\textwidth}
        \centering
        \textcolor{white}{\Huge\sffamily\bfseries FLUO}
      \end{minipage}
    }

    \vspace{0.3cm}
    {\large\sffamily\textcolor{fluogray}{Behavioral Assurance for OpenTelemetry Data}\par}
    \end{center}

    \vspace{2.5cm}

    % Title block
    \begin{flushleft}
    {\Huge\sffamily\bfseries\color{fluodark}$title$\par}
    \vspace{0.8cm}
    {\LARGE\sffamily\color{fluoblue}$subtitle$\par}
    \end{flushleft}

    \vfill

    % Metadata box
    \begin{mdframed}[linecolor=fluoblue,linewidth=2pt,leftmargin=0pt,rightmargin=0pt,skipabove=0pt,skipbelow=0pt,innertopmargin=10pt,innerbottommargin=10pt]
    {\large\sffamily
    $if(author)$\textbf{Author:} $author$\par$endif$
    $if(date)$\textbf{Published:} $date$\par$endif$
    \textbf{Version:} 1.0
    }
    \end{mdframed}

    \vspace{1cm}

    % Footer
    \begin{center}
    {\small\textcolor{fluogray}{
    \textbf{Open Source Project}\\
    \url{https://github.com/fluohq/fluo}
    }\par}
    \end{center}
  \end{titlepage}
  \newpage
}

