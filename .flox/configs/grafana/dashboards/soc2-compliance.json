{
  "dashboard": {
    "title": "SOC2 Compliance Monitoring",
    "tags": ["betrace", "compliance", "soc2"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "CC6.1 - Access Control Success Rate",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(betrace_soc2_access_control_checks_total{outcome=\"granted\"}[5m])) / sum(rate(betrace_soc2_access_control_checks_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 0.95, "color": "yellow"},
              {"value": 0.99, "color": "green"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "CC6.3 - Data Isolation Checks",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(betrace_soc2_data_isolation_checks_total{outcome=\"isolated\"}[5m])) / sum(rate(betrace_soc2_data_isolation_checks_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "red"},
              {"value": 0.95, "color": "yellow"},
              {"value": 1.0, "color": "green"}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "CC7.1 - System Monitoring (Evidence Volume)",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(betrace_compliance_spans_emitted_total{framework=\"soc2\",control=\"CC7.1\"}[5m])) * 3600",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "short",
          "fieldConfig": {
            "defaults": {
              "displayName": "Spans/hour"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Compliance Violations (All Controls)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "sum(increase(betrace_compliance_violations_detected_total{framework=\"soc2\"}[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          },
          "fieldConfig": {
            "defaults": {
              "displayName": "Violations (1h)"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Access Control Checks Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(betrace_soc2_access_control_checks_total[5m])) by (outcome)",
            "legendFormat": "{{outcome}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Checks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Data Isolation Checks by Tenant",
        "type": "graph",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(betrace_soc2_data_isolation_checks_total[5m])) by (tenant_id, outcome)",
            "legendFormat": "{{tenant_id}} - {{outcome}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Checks/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Compliance Evidence Volume by Control",
        "type": "graph",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(betrace_compliance_spans_emitted_total{framework=\"soc2\"}[5m])) by (control)",
            "legendFormat": "{{control}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Spans/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Evidence Span Size Distribution",
        "type": "graph",
        "gridPos": {"x": 12, "y": 14, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(betrace_compliance_evidence_size_bytes_bucket{framework=\"soc2\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(betrace_compliance_evidence_size_bytes_bucket{framework=\"soc2\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(betrace_compliance_evidence_size_bytes_bucket{framework=\"soc2\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Compliance Violations by Severity",
        "type": "graph",
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(betrace_compliance_violations_detected_total{framework=\"soc2\"}[5m])) by (control, severity)",
            "legendFormat": "{{control}} - {{severity}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Violations/sec"},
          {"format": "short"}
        ],
        "alert": {
          "name": "SOC2 Compliance Violation Detected",
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [0]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "SOC2 compliance violation detected - immediate investigation required",
          "noDataState": "no_data",
          "notifications": []
        }
      }
    ]
  }
}
