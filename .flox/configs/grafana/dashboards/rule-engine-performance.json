{
  "dashboard": {
    "title": "BeTrace Rule Engine Performance",
    "tags": ["betrace", "rule-engine", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Rule Evaluation Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(betrace_rule_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(betrace_rule_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(betrace_rule_evaluation_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Spans Processed per Second",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(betrace_rule_engine_spans_processed_total[5m])",
            "legendFormat": "Spans/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Rate"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Rule Evaluations by Result",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(betrace_rule_evaluation_total[5m])) by (result)",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Evaluations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Active Rules",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "betrace_rules_active",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Memory Usage (Rule Engine)",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "betrace_memory_usage_bytes{component=\"rule_engine\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "unit": "bytes"
        }
      },
      {
        "id": 6,
        "title": "Span Size Distribution",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(betrace_rule_engine_span_size_bytes_bucket[5m])) by (le)",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "yAxis": {"format": "bytes"}
        }
      },
      {
        "id": 7,
        "title": "Lazy Evaluation - Fields Loaded",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(betrace_lazy_evaluation_fields_loaded_bucket[5m])) by (le, rule_id))",
            "legendFormat": "{{rule_id}} (p95)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Fields Loaded"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "GC Pause Duration (p99)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(betrace_gc_pause_duration_seconds_bucket[5m]))",
            "legendFormat": "GC p99",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Pause Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Active Goroutines",
        "type": "graph",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "betrace_goroutines_active",
            "legendFormat": "Goroutines",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ]
      }
    ]
  }
}
